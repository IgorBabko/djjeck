.search
    width: 400px
    position: relative

    input
        margin: 0
        border: none
        padding: 0 10px
        font-size: 16px
        font-weight: 400
        
        &:focus
            border: none !important
            box-shadow: none !important
    
    i
        position: absolute
        top: 10px
        right: 5px
        cursor: pointer